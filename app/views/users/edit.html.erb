	<%= render 'post_books/list', post_books: @post_books %>

	<div class="body">
		<div class="containar">
			<div class="row">
				<div class="col-xs-3 col-xs-offset-1">
					<h2 class="heading">User info</h2>
					<%= form_for(@user) do |f| %>
					<div class="field">
						<label for="book_name">Name</label>
						<%= f.text_field :name %>
					</div>
					<br>
					<div class="field">
						<label for="user_image">Image</label>
						<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
					</div>
					<br>
					<div class="field">
						<label for="caption">Introduction</label>
						<%= f.text_field :introduction %>
					</div>
					<br>
					<div class="action">
					<%= f.submit "Update User" %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>


<footer>
	<div class="containar">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">
				<p>CopyRight Infreatop.ink</p>
			</div>
		</div>
	</div>
</footer>