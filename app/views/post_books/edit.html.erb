<div class="body">
	<div class="containar">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1 class="heading">Editing Book</h1>
				<%=form_for(@post_book) do |f| %>
				<div class="field row">
					<label for="book_name">Title</label>
					<%= f.text_field :book_name, class: "col-xs-12" %>
					<br>
					<br>
					<br>
				</div>
				<div class="field row">
					<label for="caption">Opinion</label>
					<%= f.text_area :caption, class: "col-xs-12"%>
					<br>
					<br>
					<br>
					<br>
				</div>
				<div class="action row">
					<%= f.submit "Update Book", class: "col-xs-12 btn btn-primary" %>
				</div>
				<% end %>
				<br>
				<%=link_to "Show", post_book_path(@post_book) %> |
				<%=link_to "back", post_books_path(@post_book) %>
			</div>
		</div>
	</div>
</div>

